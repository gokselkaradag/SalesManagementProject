@model IEnumerable<Sale>

@{
    ViewData["Title"] = "Teklif Listesi";
}

<h2 class="my-4">Teklif Listesi</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Teklif Başlığı</th>
            <th>Müşteri Adı</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.ListingNumber</td>
                <td>@sale.OfferTittle</td>
                <td>@sale.Name</td>
                <td>@sale.Price</td>
                <td>
                    <a href="/SaleManagement/UpdateOffer?listingNumber=@sale.ListingNumber" class="btn btn-sm btn-primary">Güncelle</a>
                    <a href="/SaleManagement/DeleteOffer?listingNumber=@sale.ListingNumber" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table {
        width: 100%;
        margin: auto;
    }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

    .btn-sm {
        margin-right: 5px;
    }

    .thead-dark {
        background-color: #343a40;
        color: #fff;
    }
</style>
