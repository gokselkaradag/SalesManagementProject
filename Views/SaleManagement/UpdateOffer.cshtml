@model Sale

@{
    ViewData["Title"] = "Teklif Güncelle";
}

<h2 class="my-4">Teklif Güncelle</h2>

<form asp-action="UpdateOffer" method="post">
    <input type="hidden" asp-for="ListingNumber" />
    <div class="form-group">
        <label>Teklif Başlığı</label>
        <input type="text" class="form-control" asp-for="OfferTittle" />
    </div>
    <div class="form-group">
        <label>Müşteri Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <button type="submit" class="btn btn-primary">Teklif Güncelle</button>
</form>
